<main class="min-h-screen">
  <div>
    <div class="py-16 mx-auto max-w-8xl">
      <div class="px-4">
        <h3 class="text-2xl font-semibold leading-8 text-gray-900 font-display sm:text-3xl sm:leading-9">
          <%= @category.title %>
        </h3>
      </div>
      <% @templates.each do |template| %>
        <preview :template="<%= parse(template).to_json %>"></preview>
      <% end %>
    </div>
  </div>
</main>
