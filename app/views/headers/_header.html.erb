<header class="relative z-10 py-4 bg-white border-b border-gray-200 ">
  <div class="flex items-center justify-between px-4 mx-auto max-w-8xl sm:px-6 lg:px-8">
    <div>
      <%= link_to root_url do %>
        <%= embed_svg "logo", class: "h-6 w-auto" %>
      <% end %>
    </div>
    <div class="flex items-center space-x-4">
      <% unless Rails.env.production? %>
        <div>
          <%= link_to "Resources", ui_resources_url, class: "font-medium text-gray-500 hover:text-gray-800 transition duration-150 ease-in-out" %>
        </div>
        <div class="self-stretch">
          <div class="h-full border-l border-gray-200"></div>
        </div>
      <% end %>
      <div class="flex items-center space-x-4">
        <a href="https://github.com/abeidahmed/component-template" target="_blank" aria-label="github" class="text-gray-500 transition duration-150 ease-in-out hover:text-gray-800">
          <%= embed_svg "solid/github", class: "w-6 h-6" %>
        </a>
        <a href="https://twitter.com/iamhawaabi" target="_blank" aria-label="twitter" class="text-gray-500 transition duration-150 ease-in-out hover:text-gray-800">
          <%= embed_svg "solid/twitter", class: "w-6 h-6" %>
        </a>
      </div>
    </div>
  </div>
</header>